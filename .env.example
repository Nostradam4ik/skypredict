# SkyPredict Environment Variables

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/skypredict
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=skypredict
DATABASE_USER=user
DATABASE_PASSWORD=password

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_SECRET_KEY=your-secret-key-here

# Weather API (OpenWeatherMap)
OPENWEATHER_API_KEY=your-api-key-here

# Aviation API (optional - for real-time data)
AVIATIONSTACK_API_KEY=your-api-key-here

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
